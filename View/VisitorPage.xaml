<UserControl x:Class="OnewheroVisitorManagement.View.VisitorPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OnewheroVisitorManagement.View"
             xmlns:vm="clr-namespace:OnewheroVisitorManagement.ViewModel">
    <Grid x:Name="HeroGrid">
            <Grid.Background>
                <ImageBrush ImageSource="/Images/onewhero-bay-bg.jpg" Stretch="UniformToFill" />
            </Grid.Background>
            <Border Background="#50000000" CornerRadius="0,0,20,20"/>

            <!--dark overlay-->

            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Grid.ZIndex="1">
                <TextBlock Text="Welcome to"
                       Foreground="White"
                       FontSize="40"
                       FontFamily="/Fonts/MsMadi-Regular.ttf #Ms Madi"
					   TextAlignment="Center"/>
                <TextBlock Text="Onewhero Bay Heritage Park"
						   Foreground="White"
						   Style="{StaticResource TitleText_Style}"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button Style="{StaticResource ActionButtonStyle}" Background="#415E31">
                        <TextBlock Text="Browse Attractions" Style="{StaticResource BtnText_Style}"
                               Foreground="White"
                               FontSize="14"/>
                    </Button>
                    <Button Style="{StaticResource ActionButtonStyle}" Background="#417676">
                        <TextBlock Text="Register" 
                               Style="{StaticResource BtnText_Style}" 
                               FontSize="14"/>
                    </Button>
                    <Button Style="{StaticResource ActionButtonStyle}" Background="#30324B">
                        <TextBlock Text="Current Events" 
                               Style="{StaticResource BtnText_Style}"
                               FontSize="14"/>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Grid>
</UserControl>
