<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <Style x:Key="Header1_Style" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="/Fonts/Montserrat-VariableFont_wght.ttf #Montserrat"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="FontSize" Value="30"/>
        <Setter Property="Margin" Value="0,0,0,10"/>
    </Style>

    <Style x:Key="TitleText_Style" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="/Fonts/MontserratAlternates-ExtraBold.ttf #Montserrat Alternates"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="FontSize" Value="50"/>
    </Style>

    <Style x:Key="Header2_Style" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="/Fonts/Montserrat-Italic-VariableFont_wght.ttf #Montserrat"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="Margin" Value="0,0,0,10"/>
    </Style>

    <Style x:Key="Text_Style" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="/Fonts/Spartan-SemiBold.ttf #Spartan"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="Margin" Value="0,0,0,10"/>
    </Style>

    <Style x:Key="Subtitle_Text" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="/Fonts/Montserrat-Italic-VariableFont_wght.ttf #Montserrat"/>
        <Setter Property="FontWeight" Value="Regular"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Foreground" Value="DarkGray"/>
    </Style>

    <Style x:Key="NavText_Style" TargetType="TextBlock"> 
        <Setter Property="FontFamily" Value="/Fonts/Montserrat-VariableFont_wght.ttf #Montserrat"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="FontSize" Value="20"/>
    </Style>
    
    <Style x:Key="BtnText_Style" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="/Fonts/Montserrat-VariableFont_wght.ttf #Montserrat"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="FontSize" Value="14"/>
    </Style>
</ResourceDictionary>